<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="MP" content="">
	<title>MP</title>
    <link rel="stylesheet" type="text/css" href="/css/home_page/headertest.css">
	<link rel="stylesheet" type="text/css" href="/css/home_page/ionicon.min.css">
	<link rel="stylesheet" type="text/css" href="/css/home_page/styletest.css">


	<link rel="stylesheet" type="text/css" href="/css/innerpage.css">

	<link rel="stylesheet" type="text/css" href="/css/media.css">
	<!-- Office page js start -->
	<link rel="stylesheet" type="text/css" href="/css/office.css">

    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>

</head>

<body>
	<!--{{>header}}




	-->
	{{> new_header}}



<!-- Section: Main -->
<div class="innerpage">
	<div class="container">
		<!-- <h1>Contact</h1> -->
		<div class="row">
			<div class="col-6 contactLeft">
				<h1>Contact</h1>
				<ul id="offices_list" class="selectSection">
						<h4>Main Offices</h4>
					{{#each main_office}}
						<li>
						<a href="#" data-number="{{this.location_no}}"  class="maplocation" onclick="change_map(event, this)">{{this.city}}, {{this.state}} 
							<input value="{{{this.latitude}}}" type="hidden">
							<input value="{{{this.longitude}}}" type="hidden"></a>
							<div class="address content" data-number="{{this.location_no}}">
								<h4 style="font-weight:bolder;">{{this.contact}}</h4>
								<h4>{{this.address}}<br>{{this.city}}, {{this.state}} {{this.zip_code}}</h4>
								<a href="https://www.google.com/maps/search/?api=1&query={{{this.latitude}}}, {{{this.longitude}}}" target="_blank">View Directions</a>
								<h4>
									<span>Phone:</span> {{this.phone}}
								</h4>
								<h4>
									<span>Fax:</span> {{this.fax}}
								</h4>
							</div>
						</li>
					{{/each}}
					<h4>Satellite Offices</h4>
					{{#each satellite_office}}
						<li>
						<a href="#" data-number="{{this.location_no}}"  class="maplocation" onclick="change_map(event, this)">{{this.city}}, {{this.state}}
							<input value="{{{this.latitude}}}" type="hidden">
							<input value="{{{this.longitude}}}" type="hidden"></a>
							<div class="address content" data-number="{{this.location_no}}">
								<h4 style="font-weight:bolder;">{{this.contact}}</h4>
								<h4>{{this.address}}<br>{{this.city}}, {{this.state}} {{this.zip_code}}</h4>
								<a href="https://www.google.com/maps/search/?api=1&query={{{this.latitude}}}, {{{this.longitude}}}" target="_blank">View Directions</a>
								<h4>
									<span>Phone:</span> {{this.phone}}
								</h4>
								<h4>
									<span>Fax:</span> {{this.fax}}
								</h4>
							</div>
						</li>
					{{/each}}
				</ul>
				<br>
				{{#each contact}}
				<h4>{{this.purpose}}</h4>
				<a href="mailto:{{{this.email}}}" class="email">{{this.email}}</a>
				{{/each}}
			</div>
			
			<div class="col-6 contactRight">
				<div class="w-100 relative">
					<div class="overlayMap" id="overlay"></div>
						<div id="map"></div>
					</div>
			</div>
		</div>
	</div>
</div>

</body>
